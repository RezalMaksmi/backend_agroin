{
    "version": 2,
    "builds": [
        { 
            "src": "public/**",
            "use": "@vercel/static"
        }, 
        {
            "src": "src/index.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/assets/(.*)",
            "destination": "public/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/src/index.js"
        }
    ]
}
